{% extends 'base.html.twig' %}

{% block title %}Module{% endblock %}

{% block body %}
    <h1>Module</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ module.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ module.nom }}</td>
            </tr>
            <tr>
                <th>Type de mesure</th>
                <td>{{ module.type is not null ? module.type.value : '' }}</td>
            </tr>
            <tr>
                <th>Date d'ajout</th>
                <td>{{ module.ajout ? module.ajout|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>En marche</th>
                <td>{{ module.etat ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_module_index') }}">back to list</a>

    <a href="{{ path('app_module_edit', {'id': module.id}) }}">edit</a>

    {{ include('module/_delete_form.html.twig') }}
{% endblock %}
